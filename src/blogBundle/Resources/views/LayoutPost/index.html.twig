{% extends "blogBundle:LayoutPost:layout.html.twig" %}

{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block post_body %}
<div style="background-color:grey;">
  <h2>Liste des posts</h2>

  <ul>
    {% for advert in listAdverts %}
      <li>
        <a href="{{ path('blog_view', {'id': advert.id}) }}">
          {{ advert.title }}
        </a>
        par {{ advert.author }},
        le {{ advert.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de postes</li>
    {% endfor %}
  </ul>
</div>
{% endblock %}